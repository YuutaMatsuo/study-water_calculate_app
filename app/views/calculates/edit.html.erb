<h1>更新画面</h1>

<%= form_with model: @calculate, url: calculates_path, html: {class: "form-container"}, validate: true do |form| %>
  <div class="form-input">
  <%= form.label :"体重(Kg)" %><%= form.number_field :weight, in: 1..200, step: 1 %>
  </div>
  <div class="form-input">
  <%= form.label :"活動時間(h)" %><%= form.number_field :activity_time, in: 1..24, step: 1 %>
  </div>
  <div class="button-container">
  <%= form.submit "更新" , class: "link-button" %>
  <%= link_to "戻る", calculates_path, class: "link-button" %>
  </div>
  
<% end %>